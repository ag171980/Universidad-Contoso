@model int

<!-- Toggle del Modal -->
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalB-@Model"> Eliminar </button>

<!-- Modal -->
<div class="modal fade" id="modalB-@Model" tabindex="-1" role="dialog" aria-labelledby="modalLabel-@Model" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel-@Model">Eliminar Registro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4>
                    ¿Esta seguro de eliminar este instructor?
                    
                </h4>
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Si", "EliminarInstructor", new { id = Model }, new { @class = "btn btn-danger" })
                <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

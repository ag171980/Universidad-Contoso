@model UniversidadContoso.Models.Curso
@{var Alumno = new UniversidadContoso.Models.Alumno(); }

<!-- Toggle del Modal -->
<button type="button" class="btn text-primary" data-toggle="modal" data-target="#modalM-@Model.ID_Curso"><u> Matricularse </u></button>

<!-- Modal -->
<div class="modal fade" id="modalM-@Model.ID_Curso" tabindex="-1" role="dialog" aria-labelledby="modalLabel-@Model.ID_Curso" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel-@Model.ID_Curso">Inscripcion a @Model.Titulo_Curso</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("AgregarMatricula", "Curso", FormMethod.Post))
            {
                <div class="modal-body">
                    @Html.HiddenFor(model => model.ID_Curso)
                    <div class="form-group row">
                        <label for="Nombre_Completo" class="control-label text-center col-4">Nombre y Apellido</label>
                        <div class="col-8">
                            <input type="text" name="Nombre_Completo" id="Nombre_Completo" class="form-control" required />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="Email" class="control-label text-center col-4">Email</label>
                        <div class="col-8">
                            <input type="email" name="Email" id="Email" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Matricularse" class="btn btn-default" />
                    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancelar</button>
                </div>
            }
        </div>
    </div>
</div>
